generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Group {
  id   String @id @default(cuid())
  name String @unique

  groupRoles GroupRole[]
  entities  Entity[]
  users     User[]
}

model Entity {
  id      String @id @default(cuid())
  name    String @unique
  groupId String
  group   Group  @relation(fields: [groupId], references: [id])
  legalName String
  taxId     String
  country   String 
  currency  String 
  yearEnd   String 
  address   String
  city      String
  state     String
  postalCode  String 
  phoneNumber String 
  email       String
  website     String 
  users   User[]
  customer  Customer[]
  invoice    Invoice[]

  @@unique([email])
  @@index([name, taxId, email])
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  firstName     String?
  lastName      String?
  password      String?
  image         Json? // {url: string, public_id: string}
  provider      String? // "google", "github", "credentials", etc.
  providerId    String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  groupRoleId String?
  groupRole  GroupRole?  @relation(fields: [groupRoleId], references: [id])
  systemRole systemRole  @default(user)

  groupId  String?
  group    Group?  @relation(fields: [groupId], references: [id])
  entityId String?
  entity   Entity? @relation(fields: [entityId], references: [id])

  @@unique([provider, providerId])
}

model GroupRole {
  id          String       @id @default(cuid())
  name        String
  users       User[]
  permissions Permission[]
  groupId     String
  group       Group        @relation(fields: [groupId], references: [id])

  @@unique([name, groupId])
}

model Customer {
  id            String  @id @default(cuid())
  type          String 
  name          String  
  email         String
  phoneNumber   String 
  companyName   String 
  address       String 
  city          String 
  state         String  
  postalCode    String 
  paymentTerms  String
  creditLimit   String
  note          String?
  entityId      String 
  entity        Entity @relation(fields: [entityId], references: [id], onDelete: Cascade)
  isActive      Boolean @default(true)
  invoice       Invoice[]
  @@unique([email])
  @@index([email, name])
}

model Invoice {
  id           String @id @default(cuid())
  customerId   String
  customer     Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  entityId      String 
  entity        Entity @relation(fields: [entityId], references: [id], onDelete: Cascade)
  invoiceNumber  String
  invoiceDate    DateTime
  dueDate        DateTime
  paymentTerms   String
  currency       String
  items          String[]
  total          Int
  notes          String?
  status         InvoiceStatus @default(Pending)
  @@unique([invoiceNumber])
  @@index([invoiceNumber, customerId, currency])
}

model Receipt {
  id          String @id @default(cuid())     
}

model Permission {
  id          String  @id @default(cuid())
  name        String  @unique // e.g., "dashboard:group:view", "dashboard:entity:view", (module:scope)
  description String?
  groupRoles  GroupRole[]

}

enum systemRole {
  superadmin
  admin
  user
}

enum InvoiceStatus {
  Overdue 
  Paid
  Draft 
  Sent
  Pending
}
